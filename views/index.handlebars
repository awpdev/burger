<main class="container">
    <div class="row">
        <div class="col-12 text-center">
            <h1>Eat Da Burger!</h1>
            <img src="/assets/images/Pngtree_burger.png" alt="picture of cheeseburger" width="240" height="240">
        </div>
    </div>
    </br>
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <h2>Not Devoured</h2>
            
            {{#each burgers}}
            
            {{#unless this.devoured}}
            <ul>
                <li>
                    <p><span class="label"></span> {{this.id}}: {{this.burger_name}} <button
                    class="devour btn-outline-dark" data-id="{{this.id}}" data-new-devoured="{{devoured}}">Devour It!</button></p>
                </li>
            </ul>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-6 col-sm-12">
            <h2>Devoured</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <ul>
                <li>
                    <p><span class="label"></span> {{this.id}}: {{this.burger_name}}
                </li>
            </ul>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="col-12 text-center">
            </br>
            <h5>Enter a burger you want to eat then click the button below!</h5>
            <form class="create-form">
                <div class="form-group">
                    <textarea id="burg" name="burger" rows="2" cols="30"></textarea>
                </div>
                <button type="submit" class="btn-outline-success">Add Burger</button>
            </form>
            </br>
        </div>
    </div>
</main>